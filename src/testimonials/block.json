{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "glassine/testimonials",
	"version": "0.1.0",
	"title": "Glassine Testimonials",
	"category": "design",
    "icon": "format-quote",
	"description": "Example block scaffolded with Create Block tool.",
	"attributes": {
		"testimonials": {
			"type": "array",
			"default": []
		},
		"accentColor": {
            "type": "string",
            "default": "#000000"
        },
		"query": {
			"content": { 
				"type": "string", 
				"source": "html", 
				"selector": ".quote" 
			},
			"author": { 
				"type": "string", 
				"source": "html", 
				"selector": ".author" 
			},
			"imageUrl": { 
				"type": "string", 
				"source": "attribute", 
				"selector": "img", 
				"attribute": "src" 
			}
		}
	},
	"example": {},
	"supports": {
		"html": false,
		"align": true
	},
	"textdomain": "glassine",
	"editorStyle": [
		"swiper",
		"file:./index.css"
	],
	"editorScript": [
		"swiper",
		"file:./index.js"
	],
	"style": [
		"swiper",
		"file:./style-index.css"
	],
	"viewScript": [
		"swiper",
		"file:./view.js"
	]
}
